<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#FFFFFF"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_userPro"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/id_userName_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/id_userPro"
            app:layout_constraintBottom_toTopOf="@id/id_userdesignation_txt"
            />

        <TextView
            android:id="@+id/id_hours_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 hr"
            android:textColor="#444444"
            android:gravity="end"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/id_userdesignation_txt"
            />


        <TextView
            android:id="@+id/id_userdesignation_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Designation"
            android:gravity="left"
            android:textColor="#444444"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/id_userName_txt"
            app:layout_constraintStart_toEndOf="@id/id_userPro"
            />


        <ImageView
            android:id="@+id/id_mediaImg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_userPro" />


        <TextView
            android:id="@+id/id_content_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Article Title"
            android:textColor="#444444"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_mediaImg"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/id_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Article Title"
            android:textColor="#444444"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_content_txt"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/id_article_url_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Article url"
            android:textColor="#444444"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_title_txt"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/id_likes_countText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12K Likes"
            android:textColor="#444444"
            android:textStyle="bold"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_article_url_txt"
            />

        <TextView
            android:id="@+id/id_likes_commentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12K Comment"
            android:textColor="#444444"
            android:textStyle="bold"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_article_url_txt"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>